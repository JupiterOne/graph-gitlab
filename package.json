{
  "name": "@jupiterone/integration-sdk",
  "version": "0.11.5",
  "description": "The SDK for developing JupiterOne integrations",
  "main": "dist/framework/index.js",
  "types": "dist/framework/index.d.ts",
  "repository": "git@github.com:JupiterOne/integration-sdk.git",
  "author": "JupiterOne <dev@jupiterone.io>",
  "license": "MPL-2.0",
  "engines": {
    "node": "10.x || 12.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "j1-integration": "./bin/j1-integration"
  },
  "files": [
    "dist",
    "bin",
    "testing.js",
    "testing.d.ts"
  ],
  "scripts": {
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "format": "prettier --write '**/*.{ts,js,json,css,md,yml}'",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:ci": "yarn lint && yarn type-check && yarn test --ci",
    "prebuild": "yarn test:ci",
    "build": "tsc -p tsconfig.dist.json --declaration",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@jupiterone/data-model": "^0.3.1",
    "@pollyjs/adapter-node-http": "^4.0.4",
    "@pollyjs/core": "^4.0.4",
    "@pollyjs/persister-fs": "^4.0.4",
    "async-sema": "^3.1.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "dependency-graph": "^0.9.0",
    "dotenv": "^8.2.0",
    "globby": "^11.0.0",
    "lodash": "^4.17.15",
    "p-map": "^4.0.0",
    "p-queue": "^6.3.0",
    "rimraf": "^3.0.2",
    "upath": "^1.2.0",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/har-format": "^1.2.4",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.0",
    "@types/pollyjs__persister": "^2.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/uuid": "^7.0.2",
    "@types/vis": "^4.21.19",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "get-port": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^25.2.6",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.1.1",
    "memfs": "^3.1.2",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./testSetup.ts"
    ],
    "clearMocks": true,
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*test.(js|ts)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  }
}
